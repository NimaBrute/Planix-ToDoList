    <div class="time-picker">
        <h3 class="mb-3">انتخاب ساعت</h3>
        <form class="form-inline">
            <div>
                <label for="hour" class="form-label">ساعت</label>
                <select id="hour" class="form-select bg-dark text-light border-info" size="1" onfocus="this.size=3"
                    onblur="this.size=1" onchange="this.size=1; this.blur();">
                    <script>
                        for (let i = 0; i < 24; i++) {
                            document.write(`<option value="${i}">${i}</option>`);
                        }
                    </script>
                </select>
            </div>
            <div>
                <label for="minute" class="form-label">دقیقه</label>
                <select id="minute" class="form-select bg-dark text-light border-info" size="1" onfocus="this.size=3"
                    onblur="this.size=1" onchange="this.size=1; this.blur();">
                    <script>
                        for (let i = 0; i < 60; i++) {
                            document.write(`<option value="${i}">${i}</option>`);
                        }
                    </script>
                </select>
            </div>
            <div>
                <button type="button" class="btn btn-info mt-4" onclick="selectTime()">تایید</button>
            </div>
        </form>
    </div>

    <script>
        function selectTime() {
            let hour = document.getElementById("hour").value;
            let minute = document.getElementById("minute").value;
            let note = document.getElementById("note").value;
            alert(`زمان انتخاب شده: ${hour}:${minute}\nتوضیحات: ${note}`);
        }
    </script>

